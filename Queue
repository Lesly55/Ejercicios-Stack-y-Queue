
public class MyQueue {
	
	char[] queue;
	int tail;
	int Max;
	
	public MyQueue(int arregloLength) {
		queue = new char[arregloLength];
		tail = 0;
		Max = arregloLength;
	}
	//metodo de queue o colas 7u7
	
	public char add(char k) {
		if(tail == Max) {
			System.out.print("\nArreglo lleno :( ");
		}
		else {
			queue[tail] = k;
			tail++;
		}
		return k;
	}
	
	public void delete() {
		
		if(tail == 0) {
			System.out.println("\nArreglo esta vacio :(");
		}
		else {
			System.out.print("\nElemento eliminado: " + queue[0]);
			for(int i = 0; i < tail; i++) {
				int j = i + 1;
				queue[i] = queue[j];
			}
			tail--;
			
		}
		
	}
	

}
